  <%= form_with(model: @bulletin.present? ? [@post.bulletin, @post] : @post, local: true) do |f| %>
  <div class="form-inputs">
      <%= f.label :제목 %>
      <%= f.text_field :title, id: :post_title, class: "form-control" %><br/>
      <%= f.label :내용 %>
      <%= tinymce %>
      <%= f.text_area :content, id: :post_content, class: "form-control tinymce", rows: "10" %>
      <% f.number_field :user_id %>
  </div>

  <center>
  <div class="form-actions" style="margin-top: 20px;">
    <%= f.button :글쓰기, class: "btn btn-primary" %>
<% end %>
<%= link_to '목록', (@bulletin.present? ? bulletin_posts_path(@bulletin) : posts_path), class: "btn btn-secondary" %>
</div>
</center>