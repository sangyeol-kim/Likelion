<div class="board" style="background: url('/img/title_img_4.jpg') no-repeat center center/cover scroll;"><span style="color: white; background:rgba(0,0,0,0.6); padding: 10px; border-radius: 10px;"><%= link_to '쪽지 보내기', '/users', class: "board_title" %></span></div>
<div class="container" style="margin-bottom: 100px;">
<h1 align="center" style="margin-top: 30px;"><%= @conversation.with(current_user).nickname %></h1><hr/>

<div id="conversation-main">
  <div id="conversation-body" data-conversation-id="<%= @conversation.id %>">
      <%= render @conversation.personal_messages %>
  </div>

  <%= form_for @personal_message do |f| %>
    <%= hidden_field_tag 'conversation_id', @conversation.id %>

  <div class="row">
    <div class="col-9 col-sm-10 col-md-11" align="right">
    <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="col-2 col-sm-1 col-md-1" align="left">
    <%= f.submit :전송, class: "btn btn-outline-warning" %>
    </div>
  </div>
  <% end %>
</div>
</div>