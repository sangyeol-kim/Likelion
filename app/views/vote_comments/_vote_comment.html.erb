<div id="vote_comment_<%= vote_comment.id %>">
  <table width="100%">
    <tr>
        <td width="15%">
          <%= vote_comment.user != nil ? User.find(vote_comment.user_id).nickname : vote_comment.user_name %>
        </td>
        <td>
            <span class="badge badge-pill badge-default" style="padding: 1"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= time_ago_in_words(vote_comment.created_at) %>전 [ <%= vote_comment.created_at.strftime('%Y-%m-%d %H:%M') %> ]</span>
        <td align="right">
            <% if can? :destroy, vote_comment %>
            <%= link_to "", [vote_comment.link, vote_comment], method: :delete, remote: true, data: { confirm: "정말로 지우시겠습니까?" }, class: "fa fa-times" %>
            <% end %>
        </td>
    </tr>
    <tr>
        <td colspan="3" rowspan="1">
            <%= vote_comment.body %><hr/>
        </td>
    </tr>
</table>
</div>