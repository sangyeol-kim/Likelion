<% #아무 쪽지를 보내지 않으면 이 창이 생김. %>
<div class="board" style="background: url('/img/title_img_4.jpg') no-repeat center center/cover scroll;"><span style="color: white; background:rgba(0,0,0,0.6); padding: 10px; border-radius: 10px;"><%= link_to '쪽지 보내기', users_path, class: "board_title" %></span></div>
<div class="container">
<h1 align="center" style="margin-top: 30px;"><%= @receiver.nickname %></h1><hr/>

<%= form_for @personal_message do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <div class="row" style="margin-bottom: 100px;">
    <div class="col-9 col-sm-10 col-md-11" align="right">
    <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="col-2 col-sm-1 col-md-1" align="left">
    <%= f.submit :전송, class: "btn btn-outline-warning" %>
    </div>
  </div>
<% end %>
